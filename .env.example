# CoT SafePath Filter Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
APP_NAME=cot-safepath-filter
APP_VERSION=0.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=4
RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://safepath:your_password@localhost:5432/safepath_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# Safety Model Configuration
SAFETY_MODEL_NAME=bert-safety-v2
SAFETY_MODEL_PATH=/models/bert-safety-v2
SAFETY_THRESHOLD=0.7
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Feature Flags
ENABLE_SEMANTIC_FILTERING=true
ENABLE_PATTERN_FILTERING=true
ENABLE_CONTEXTUAL_FILTERING=true
ENABLE_ADAPTIVE_FILTERING=false
ENABLE_MULTIMODAL_FILTERING=false

# Monitoring and Observability
ENABLE_METRICS=true
METRICS_PORT=8090
PROMETHEUS_ENDPOINT=/metrics
GRAFANA_URL=http://localhost:3000

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_SERVICE_NAME=cot-safepath-filter
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_RESOURCE_ATTRIBUTES=service.name=cot-safepath-filter,service.version=0.1.0

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/logs/safepath.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# External Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=/data/safepath
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=safepath-bucket
AWS_REGION=us-east-1

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000000
ENABLE_CACHE_COMPRESSION=true

# Development Settings
DEV_RELOAD=true
DEV_DEBUG_TOOLBAR=true
DEV_PROFILER=false
DEV_MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://safepath:test_password@localhost:5432/safepath_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_PARALLEL_WORKERS=4

# Production Settings (only set in production)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-newrelic-license
# DATADOG_API_KEY=your-datadog-api-key

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# API Documentation
DOCS_ENABLED=true
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Performance Tuning
MAX_REQUEST_SIZE=10485760  # 10MB
REQUEST_TIMEOUT=30
KEEP_ALIVE_TIMEOUT=5
GRACEFUL_SHUTDOWN_TIMEOUT=30