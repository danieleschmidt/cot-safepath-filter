# CoT SafePath Filter - Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Core Application Settings
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Application version (auto-populated by CI/CD)
VERSION=

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Security Settings
# =============================================================================

# Safety filter settings
SAFETY_LEVEL=balanced  # strict, balanced, permissive
FILTER_THRESHOLD=0.6
ENABLE_LOGGING=true
LOG_FILTERED_CONTENT=false  # Set to true only in development

# API security
API_KEY=your-api-key-here
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Rate limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600  # seconds

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./safepath.db

# Redis configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# External API Configuration
# =============================================================================

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Hugging Face API
HUGGINGFACE_API_KEY=your-huggingface-api-key

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=cot-safepath-filter
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Sentry error tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# Notification Services
# =============================================================================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Slack notifications
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#security-alerts

# Discord notifications
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# =============================================================================
# Development and Testing
# =============================================================================

# Test database
TEST_DATABASE_URL=sqlite:///./test_safepath.db

# Coverage reporting
COVERAGE_MINIMUM=80
COVERAGE_FAIL_UNDER=70

# Performance testing
LOAD_TEST_DURATION=300  # seconds
LOAD_TEST_USERS=100
LOAD_TEST_SPAWN_RATE=10

# =============================================================================
# Cloud and Infrastructure
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=safepath-artifacts

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# Docker Registry
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=your-org

# =============================================================================
# CI/CD Configuration
# =============================================================================

# GitHub configuration
GITHUB_TOKEN=your-github-token
GITHUB_REPOSITORY=your-org/cot-safepath-filter

# Deployment configuration
DEPLOY_ENVIRONMENT=development
DEPLOY_REGION=us-east-1
DEPLOY_REPLICAS=1

# Security scanning
SNYK_TOKEN=your-snyk-token
CODEQL_ENABLED=true
DEPENDENCY_CHECK_ENABLED=true

# =============================================================================
# Feature Flags
# =============================================================================

# Experimental features
ENABLE_MULTIMODAL_FILTERING=false
ENABLE_DISTRIBUTED_FILTERING=false
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_A_B_TESTING=false

# Integration features
ENABLE_LANGCHAIN_INTEGRATION=true
ENABLE_AUTOGEN_INTEGRATION=false
ENABLE_OPENAI_INTEGRATION=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000  # MB

# Async processing
ASYNC_WORKERS=4
ASYNC_QUEUE_SIZE=1000

# Resource limits
MAX_MEMORY_MB=512
MAX_CPU_CORES=2
MAX_REQUEST_SIZE_MB=10